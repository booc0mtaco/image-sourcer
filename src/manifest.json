{
    "manifest_version": 2,

    "name": "Image Sourcer",
    "description": "Quickly view all the images on the current page",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "icon@2x.png",
        "default_popup": "popup.html",
        "default_title": "Grab images from current page"
    },

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        },
        {
            "matches": ["*://*/*"],
            "js": ["link_engine.js"]
        }
    ]
}
